{
  "manifest_version": 3,
  "name": "BookmarksManagement",
  "version": "1.0",
  "description": "BookmarksManagement",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "commands",
    "notifications",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["modal.css"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "BookmarksManagement"
  },
  "commands": {
    "delete-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Delete the current bookmark"
    },
    "save-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Open the bookmark manager"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
} 